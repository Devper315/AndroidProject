<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tech_item_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_blue" />

    <TextView
        android:id="@+id/tech_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tech_item_img"
        android:layout_toRightOf="@id/tech_item_img"
        android:text="Android"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tech_item_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tech_item_name"
        android:layout_alignLeft="@id/tech_item_name"
        android:text="Sub Android"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tech_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tech_item_sub"
        android:layout_alignLeft="@id/tech_item_name"
        android:text="Android Description"
        android:textSize="14dp"

        android:textStyle="bold" />
</RelativeLayout>