<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tour_item_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/car"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tour_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tour name"
                android:textColor="@color/grayblue"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tour_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tour time"
                android:textColor="@color/orange"
                android:textSize="11dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tour_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tour price"
                android:textColor="@color/violet"
                android:textSize="11dp"
                android:textStyle="bold" />
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XÃ³a"
            android:textSize="11dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:background="@color/grayblue"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>