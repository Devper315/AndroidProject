<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorPink"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/food_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon_food"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/food_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Foodtour Hanoi"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30dp"
        android:id="@+id/food_text1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/food_text1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Anywhere and anytime"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/food_text2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
